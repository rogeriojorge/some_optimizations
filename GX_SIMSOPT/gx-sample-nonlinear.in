
 debug = false

[Dimensions]
 ntheta = 24
 nperiod = 1
 ny = 32
 nx = 32

 nhermite  = 6
 nlaguerre = 4
 nspecies = 1


[Domain]
 y0 = 10.0
 boundary = "linked"

[Physics]
 beta = 0.0
 nonlinear_mode = true

[Time]
 dt = 0.05
 nstep  = 10000
 nwrite = 50
 nsave  = 10000000
 scheme = "sspx3"       # use SSPx3 timestepping scheme
 cfl = 1.0

[Initialization]
 ikpar_init = 0                  # parallel wavenumber of initial perturbation
 init_field = "density"          # initial condition set in density
 init_amp = 1.0e-3               # amplitude of initial condition

[Geometry]
 geo_option = "nc"
 eps = 0.18
 shat = 0.8
 Rmaj = 1.0
 shift = 0.0
 qinp = 1.4
 geo_file = "gx_wout_gonzalez-2021_psiN_0.122_gds21_nt_36_geo.nc"

[Boltzmann]
 add_Boltzmann_species = true
 Boltzmann_type = "electrons"
 tau_fac = 1.0

[Dissipation]
 closure_model = "none"          # no closure assumptions (just truncation)
 hypercollisions = true          # use hypercollision model
 nu_hyper_m = 0.1                # coefficient of hermite hypercollisions
 p_hyper_m = 6                   # exponent of hermite hypercollisions
 nu_hyper_l = 0.1                # coefficient of laguerre hypercollisions
 p_hyper_l = 6                   # exponent of laguerre hypercollisions

 hyper = true                    # use hyperdiffusion
 D_hyper = 0.1                  # coefficient of hyperdiffusion
 p_hyper = 2                     # exponent of hyperdiffusion is 2*p_hyper = 4

[Restart]
 restart = false
 save_for_restart = true
 nsave  = 10000000

[Diagnostics]
 nwrite = 50
 fluxes = true
 omega  = false
 free_energy = false
 all_zonal_scalars = false
 all_zonal = false

[Wspectra]
species          = true
hermite          = true
laguerre         = true
hermite_laguerre = false
kx               = true
ky               = true
kxky             = false
kperp            = true
z                = true

[Pspectra]
species          = false
kx               = false
ky               = false
kxky             = false
kperp            = false


# it is okay to have extra species data here; only the first nspecies elements of each item are used

[species]
 z     = [ 1.0,      -1.0     ]
 mass  = [ 1.0,       2.7e-4  ]
 dens  = [ 1.0,       1.0     ]
 temp  = [ 1.0,       1.0     ]
 tprim = [ 3.0,       0.0     ]
 fprim = [ 1.0,       0.0     ]
 uprim = [ 0.0,       0.0     ]
 vnewk = [ 0.02,      0.0     ]
 type  = [ "ion",  "electron" ]


